@model WEB_Boletim.Models.Materia

@{
    ViewData["Title"] = "Editar";
}

<script src="~/js/sweetalert2.js"></script>
@if (ViewBag._sucesso != null)
{
    <div class="modal hide" data-backdrop="static" data-keyboard="false">
        <script type="text/javascript">
            Swal.fire({
                position: 'center',
                icon: 'success',
                title: 'Cadastrado com Sucesso',
            }).then(function () {
                window.location = "/Materia/Index";
            });
        </script>
    </div>
}
<h1>Editar</h1>

<h4>Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DescricaoMateria" class="control-label"></label>
                <input asp-for="DescricaoMateria" class="form-control" />
                <span asp-validation-for="DescricaoMateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeCadastroMateria" class="control-label"></label>
                <input asp-for="DataDeCadastroMateria" class="form-control" />
                <span asp-validation-for="DataDeCadastroMateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SituacaoID" class="control-label"></label>
                <select asp-for="SituacaoID" class="form-control" asp-items="ViewBag.SituacaoID"></select>
                <span asp-validation-for="SituacaoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

